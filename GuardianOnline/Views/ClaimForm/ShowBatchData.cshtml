<script>
    // Translated labels for child table
    var tServiceName = '@T("Child_ServiceName", "Service Name")';
    var tServiceQnt = '@T("Child_ServiceQnt", "Service Qnt")';
    var tUnitAmt = '@T("Child_UnitAmt", "Unit Amt")';
    var tServiceAmt = '@T("Child_ServiceAmt", "Service Amt")';
    var tDeductAmt = '@T("Child_DeductAmt", "Deduct Amt")';
    var tDiscountAmt = '@T("Child_DiscountAmt", "Discount Amt")';
    var tDueAmt = '@T("Child_DueAmt", "Due Amt")';
    var tRequestedAmt = '@T("Child_RequestedAmt", "Requested Amt")';
    var tDifferenceAmt = '@T("Child_DifferenceAmt", "Difference Amt")';
    var tServiceNote = '@T("Child_ServiceNote", "Service Note")';

    function format(d) {
        var result =
            '<div style="padding:10px 10px 14px;">' +
            '<div style="font-weight:900;margin-bottom:8px;color:#0b2b40;">@T("Child_Title","Services Details")</div>' +
            '<div style="overflow:auto;border:1px solid rgba(0,0,0,.08);border-radius:12px;">' +
            '<table class="table table-sm table-striped mb-0" style="min-width:1100px;">' +
            '<thead><tr>' +
            '<th>' + tServiceName + '</th>' +
            '<th>' + tServiceQnt + '</th>' +
            '<th>' + tUnitAmt + '</th>' +
            '<th>' + tServiceAmt + '</th>' +
            '<th>' + tDeductAmt + '</th>' +
            '<th>' + tDiscountAmt + '</th>' +
            '<th>' + tDueAmt + '</th>' +
            '<th>' + tRequestedAmt + '</th>' +
            '<th>' + tDifferenceAmt + '</th>' +
            '<th>' + tServiceNote + '</th>' +
            '</tr></thead><tbody>';

        for (var i = 0; i < d.OrderListDetails.length; i++) {
            result +=
                '<tr>' +
                '<td>' + d.OrderListDetails[i].ServiceName + '</td>' +
                '<td>' + d.OrderListDetails[i].ServiceQnt + '</td>' +
                '<td>' + d.OrderListDetails[i].ServiceUnitAmt + '</td>' +
                '<td>' + d.OrderListDetails[i].ServiceAmt + '</td>' +
                '<td>' + d.OrderListDetails[i].ServiceDeductAmt + '</td>' +
                '<td>' + d.OrderListDetails[i].ServiceDiscountAmt + '</td>' +
                '<td>' + d.OrderListDetails[i].ServiceDueAmt + '</td>' +
                '<td>' + d.OrderListDetails[i].ServiceRequestedAmt + '</td>' +
                '<td>' + d.OrderListDetails[i].ServiceDifferenceAmt + '</td>' +
                '<td>' + d.OrderListDetails[i].ServiceNote + '</td>' +
                '</tr>';
        }

        result += '</tbody></table></div></div>';
        return result;
    }

    function toNum(v) {
        if (v === null || v === undefined) return 0;
        var n = parseFloat(v);
        return isNaN(n) ? 0 : n;
    }
    function fmt(n) {
        try { return n.toLocaleString(undefined, { minimumFractionDigits: 2, maximumFractionDigits: 2 }); }
        catch (e) { return (Math.round(n * 100) / 100).toFixed(2); }
    }

    $(document).ready(function () {

        // Loading ON
        $('#backring1').show();
        $("#Loadingg").show();

        var BatchNumber = "@ViewBag.BatchNumberr";

        $.ajax({
            url: "/ClaimForm/GetBatchList",
            data: { Batch_Number: BatchNumber },
            type: "GET",
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (data) {

                // Summary
                var totalClaims = (data && data.length) ? data.length : 0;
                var sumDue = 0;
                var sumRequested = 0;

                for (var i = 0; i < totalClaims; i++) {
                    sumDue += toNum(data[i].NetClaimedAmt);
                    sumRequested += toNum(data[i].TRequestedAmt);
                }

                $('#sbTotalClaims').text(totalClaims);
                $('#sbTotalDue').text(fmt(sumDue));
                $('#sbTotalRequested').text(fmt(sumRequested));

                // DataTable
                var table = $("#tblApprovals").DataTable({
                    data: data,
                    searching: false,
                    ordering: false,
                    paging: true,
                    deferRender: true,
                    scrollX: true,
                    autoWidth: false,
                    dom: 'Bfrtip',
                    buttons: ['copy', 'csv', 'excel', 'print'],
                    bInfo: true,
                    columnDefs: [{ targets: 5, type: "date-eu" }],

                    columns: [
                        {
                            className: 'details-control',
                            orderable: false,
                            data: null,
                            defaultContent: '<i class="bi bi-plus-square"></i>'
                        },
                        { data: "ClaimID" },
                        { data: "ClaimFormNum" },
                        { data: "CardNumber" },
                        { data: "MemberName" },
                        { data: "ProcedureDate" },
                        { data: "TClaimAmt" },
                        { data: "TDeductAmt" },
                        { data: "TDiscountAmt" },
                        { data: "NetClaimedAmt" },
                        { data: "TRequestedAmt" },
                        { data: "TDifferenceAmt" },
                        { data: "BranchName" }
                    ],
                    order: [[1, 'desc']]
                });

                // Search
                $('#sbSearch').on('keyup', function () {
                    table.search(this.value).draw();
                });

                // Expand/Collapse
                $('#tblApprovals tbody').on('click', 'td.details-control', function () {
                    var tr = $(this).closest('tr');
                    var row = table.row(tr);

                    if (row.child.isShown()) {
                        row.child.hide();
                        tr.removeClass('shown');
                        $(this).html('<i class="bi bi-plus-square"></i>');
                    } else {
                        row.child(format(row.data())).show();
                        tr.addClass('shown');
                        $(this).html('<i class="bi bi-dash-square"></i>');
                    }
                });

                // Loading OFF
                $("#Loadingg").hide();
                $('#backring1').hide();
            },
            error: function (ex) {
                console.log(ex);
                $("#Loadingg").hide();
                $('#backring1').hide();
            }
        });
    });
</script>

<script>
    function refresh() {
        $.ajax({
            type: "POST",
            url: "/ClaimForm/CheckIfSessionValid",
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (r) {
                if (r == "False") {
                    window.open('@Url.Action("login", "ClaimForm")', '_self');
                }
                else {
                    setTimeout(refresh, 5000);
                }
            }
        });
    }
    setTimeout(refresh, 1000);
</script>