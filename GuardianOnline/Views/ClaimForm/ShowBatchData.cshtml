<div class="pv-page sb-page">
    <div class="pv-shell">

        <div class="pv-header">
            <div>
                <div class="pv-title">@T("Title", "Batch Data")</div>
                <div class="pv-sub">
                    @T("SubTitle", "View batch claims and services details")
                </div>
            </div>

            <div class="pv-actions">
                <a class="btn btn-outline-secondary pv-btn" href="@Url.Action("PaymentInquiry","ClaimForm")">
                    <i class="bi bi-arrow-left"></i>
                    <span>@T("BackToPayments", "Back to Payment Inquiry")</span>
                </a>

                <a class="btn btn-outline-primary pv-btn" href="@Url.Action("DoctorHome","ClaimForm")">
                    <i class="bi bi-house"></i>
                    <span>@T("BackHome", "Back to Home")</span>
                </a>
            </div>
        </div>

        <div class="pv-card">
            <div class="pv-card-head">
                <div class="pv-card-title">@T("Legend", "Batch Content Data")</div>
                <div class="pv-card-sub">
                    @T("BatchNo", "Batch No") : <span class="sb-batch">@ViewBag.BatchNumberr</span>
                </div>
            </div>

            <div class="sb-toolbar">
                <div class="sb-hint">
                    <i class="bi bi-info-circle"></i>
                    <span>@T("Hint", "Click the left icon to show services details")</span>
                </div>
            </div>
            <div class="sb-topbar">
                <div class="sb-summary">
                    <div class="sb-scard">
                        <div class="sb-sicon"><i class="bi bi-list-check"></i></div>
                        <div>
                            <div class="sb-slabel">@T("Sum_TotalClaims", "Total Claims")</div>
                            <div class="sb-svalue" id="sbTotalClaims">0</div>
                        </div>
                    </div>

                    <div class="sb-scard">
                        <div class="sb-sicon"><i class="bi bi-cash-stack"></i></div>
                        <div>
                            <div class="sb-slabel">@T("Sum_TotalDue", "Total Due")</div>
                            <div class="sb-svalue" id="sbTotalDue">0.00</div>
                        </div>
                    </div>

                    <div class="sb-scard">
                        <div class="sb-sicon"><i class="bi bi-receipt"></i></div>
                        <div>
                            <div class="sb-slabel">@T("Sum_TotalRequested", "Total Requested")</div>
                            <div class="sb-svalue" id="sbTotalRequested">0.00</div>
                        </div>
                    </div>
                </div>

                <div class="sb-search">
                    <i class="bi bi-search"></i>
                    <input id="sbSearch" class="form-control" type="text" placeholder="@T("Search", "Search...")" />
                </div>
            </div>
            <div class="sb-table-wrap">
                <table class="table table-hover align-middle mb-0" id="tblApprovals" cellpadding="0" cellspacing="0">
                    <thead>
                        <tr>
                            <th style="width:40px;"></th>
                            <th>@T("Col_ClaimID", "Claim ID")</th>
                            <th>@T("Col_ClaimFormNum", "ClaimForm Number")</th>
                            <th>@T("Col_CardNumber", "Card Number")</th>
                            <th>@T("Col_MemberName", "Member Name")</th>
                            <th>@T("Col_ProcedureDate", "Procedure Date")</th>
                            <th>@T("Col_ContractAmt", "Contract Amt")</th>
                            <th>@T("Col_DeductAmt", "Deductable Amt")</th>
                            <th>@T("Col_DiscountAmt", "Discount Amt")</th>
                            <th>@T("Col_DueAmt", "Due Amt")</th>
                            <th>@T("Col_RequestedAmt", "Requested Amt")</th>
                            <th>@T("Col_DifferenceAmt", "Difference Amt")</th>
                            <th>@T("Col_BranchName", "Branch Name")</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>

    </div>
</div>
<div id="backring1">
    <div class="ring1" id="Loadingg">
        Loading
        <spana1></spana1>
    </div>
